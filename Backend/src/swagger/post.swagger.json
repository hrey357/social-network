{
  "openapi": "3.1.1",
  "info": {
    "version": "1.0.0",
    "title": "API Post Service - Social Network",
    "description": "Microservice dedicated to managing post of a social network posts."
  },
  "servers": [
    {
      "url": "http://localhost:4010/api/post"
    }
  ],
  "tags": [
    "Post"
  ],
  "paths": {
